<div class='container px-5 px-sm-0'>
  <div class='row px-1 py-4 ml-md-3'>
    <div class='col-md-3 py-3'>
      <h3 class="mb-4">登録情報</h3>
      <%= render 'info', customer: @customer %>
    </div>
    <div class='col-md-8 offset-md-1 p-3'>
      <h3>本を探す</h3>
      <div class=".search-box">
        <%= form_with url: books_path , method: :get, local: true do |f| %>
          <%= f.text_field :keyword, class: "form-control", placeholder: "キーワードから探す" %>
          <%= f.submit '本を検索', class: "form-control btn btn-success" %>
  　　　　<% end %>
      </div>
      
    </div>
  </div>
</div>