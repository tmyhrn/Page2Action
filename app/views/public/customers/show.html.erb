<div class="container px-sm-0">
  <div class="row px-1 py-4 ml-md-3">
    <div class="col-md-3 py-3">
      <h4 class="mb-3 font-weight-bold">登録情報</h4>
      <%= render 'info', customer: @customer %>
    </div>
    <div class="col-md-8 offset-md-1 p-3">
      <h4 class="font-weight-bold">読んだ本一覧</h4>
      <div class="table-responsive">
        <table class="table table-hover text-center">
          <thead>
            <tr class="bg-light">
              <th></th>
              <th>タイトル</th>
              <th>著者</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= image_tag(review.book.small_image_url, class: "book-image") %></td>
                <td><%= review.book.title %></td>
                <td><%= review.book.author %></td>
                <td><%= link_to "詳細", review_path(review), class:"btn btn-success px-2" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @reviews %>
      </div>
    </div>
  </div>
</div>