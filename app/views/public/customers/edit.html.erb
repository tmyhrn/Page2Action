<div class="container my-4 px-sm-1">
  <div class="px-1 ml-md-3">
    <h5 class="bg-light text-center ml-5 mb-4" style="width: 160px;">会員情報編集</h5>
  </div>
  
  <div class="col-sm-12 col-md-11 col-lg-11 col-xl-9 px-sm-0 px-md-1 mt-3">
    <%= form_with(model: @customer, method: :patch) do |f| %>
    
    <form>
      <!--ユーザー画像の変更-->
      <div class="form-group row justify-content-center">
        <label class="col-md-3 col-form-label">プロフィール画像</label>
        <div class="col-md-9 form-row mb-4">
          <div class="col-md-6">
            <%= f.file_field :profile_image, class: "form-control, accept: 'image/*" %>
          </div>
        </div>
      </div>
      
      <!--ニックネームの変更-->
      <div class="form-group row justify-content-center">
        <label class="col-md-3 col-form-label">ニックネーム</label>
        <div class="col-md-9 form-row mb-4">
          <div class="col-md-6">
            <%= f.text_field :nickname, class: "form-control" %>
          </div>
        </div>
      </div>
      
      <!--自己紹介の変更-->
      <div class="form-group row justify-content-center">
        <label class="col-md-3 col-form-label">自己紹介</label>
        <div class="col-md-9 form-row mb-4">
          <div class="col-md-6">
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </div>
      </div>
      
      <!--メールアドレスの変更-->
      <div class="form-group row justify-content-center">
        <label class="col-md-3 col-form-label">メールアドレス</label>
        <div class="col-md-9 form-row mb-4">
          <div class="col-md-6">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
      </div>
      
      <!--編集内容を保存・退会する-->
      <div class="form-group row ml-3">
        <label class="col-md-3 col-form-label"></label>
        <div class="col-md-9 form-row my-4">
          <div class="col-5">
            <%= f.submit "編集内容を保存", class: "btn btn-success px-5" %>
          </div>
          <div class="col-4 col-md-2 col-lg-1">
          </div>
          <div class="col-3 d-flex justify-content-end">
            <%= link_to "退会する", customers_check_path, class: "btn btn-danger px-3" %>
          </div>
        </div>
      </div>
      
    </form>
    <% end %>
  </div>
</div>