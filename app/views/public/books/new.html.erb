<div class="container my-4 px-md-0">
  <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2 px-1 ml-md-2">
    <h5 class="text-center ml-md-5 text-nowrap">『<%= @title %>』の検索結果</h5>
  </div>

  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <td></td>
      <td>タイトル</td>
      <td>著者</td>
      <td></td>
    </tr>
  </thead>

  <tbody>

<% if @books %>
  <% @books.each do |book| %>
      <tr class="justify-content-center">
        <td><%= link_to (image_tag(book.small_image_url)),  book_path(book.isbn) %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td>
          <%= form_tag(books_path) do %>
          <%= hidden_field_tag :isbn, book.isbn %>
          <%= submit_tag 'レビューを書く', class: "btn btn-primary col-md-9 mr-4 font-weight-bold text-center" %>
        </td>
        <% end %>
      </tr>
  <% end %>
<% end %>
  </tbody>
</table>
</div>