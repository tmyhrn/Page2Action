<div class="container my-4 px-md-0">
  <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2 px-1 ml-md-2">
    <h5 class="text-center ml-md-5">検索結果</h5>
  </div>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <td></td>
      <td>タイトル</td>
      <td>著者</td>
      <td>出版日</td>
      <td></td>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to (image_tag(book.medium_image_url)), book.item_url %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.sales_date %></td>
        <td><%= link_to "読みたい本に登録", customers_path %></td>
      </tr>
    <% end %>

  </tbody>
</table>
</div>