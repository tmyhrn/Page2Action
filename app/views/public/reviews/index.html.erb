<div class="container my-4 px-md-0">
  <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2 px-1 ml-md-2">
    <h5 class="text-center ml-md-5 text-nowrap">投稿一覧</h5>
  </div>
  <div class="search-form mb-5">
    <%= form_with url: tagsearches_search_path, method: :get, local: true do |f| %>
      <div class="d-flex justify-content-center align-items-center mt-3">
        <%= f.text_field :content, class: "form-control mr-1", placeholder: "タグを入力" %>
        <%= f.submit "タグ検索", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>著者</th>
          <th>投稿者</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= image_tag(review.book.small_image_url, class: "book-image") %></td>
            <td><%= review.book.title %></td>
            <td><%= review.book.author %></td>
            <td><%= review.customer.nickname %></td>
            <td><%= link_to "詳細", review_path(review), class: "btn btn-success btn-block font-weight-bold" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>