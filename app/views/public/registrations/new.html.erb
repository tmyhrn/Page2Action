<div class="container my-5 px-sm-0">
  <div class="col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 ml-md-5">
    <h5 class="bg-light text-center font-weight-bold ml-6">新規会員登録</h5>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div class="container my-5 px-sm-0">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group row mb-4 justify-content-center">
            <label for="nickname" class="col-sm-3 col-form-label">ニックネーム</label>
            <div class="col-sm-3">
              <%= f.text_field :nickname, autocomplete: "nickname", placeholder: "読書太郎" , class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mb-4 justify-content-center">
            <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
            <div class="col-sm-3">
              <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" , class: "form-control" %>
            </div>
          </div>
          <div class="form-group row mb-4 justify-content-center">
            <label for="password" class="col-sm-3 col-form-label">パスワード
              <% if @minimum_password_length %>
                (<%= @minimum_password_length %>文字以上)
              <% end %>
            </label>
            <div class="col-sm-3">
              <%= f.password_field :password, autocomplete: "new-password" , class: "form-control"%>
            </div>
          </div>
          <div class="form-group row mb-4 justify-content-center">
            <label for="password_confirmation" class="col-sm-3 col-form-label">パスワード(確認用)</label>
            <div class="col-sm-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
            </div>
          </div> 
          <div class="form-group row">
            <label class="col-sm-5 col-form-label"></label>              
            <div class="col-sm-5 mt-4">
              <%= f.submit "新規登録", class: "btn btn-primary col-sm-6 font-weight-bold" %>    
            </div> 
          </div>
        </div>
      </div>
      
      <div class="col-6 col-sm-5 col-md-4 col-lg-3 mt-2 col-xl-2 ml-md-5">
        <h5 class="bg-light text-center font-weight-bold ml-6 mb-5">登録済みの方</h5>
      </div>
      <div class="col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 ml-md-5 ">
        <p class="text-nowrap ml-5"><%= link_to "こちら", new_session_path(resource_name) %>  からログインしてください。</p>
      </div>
    </div>
  <% end %>
</div>