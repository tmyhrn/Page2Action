<div class="container my-4 px-sm-1">
  <div class="px-1">
    <h5 class="bg-light text-center font-weight-bold ml-3 mb-4" style="width: 300px;"><%= @customer.nickname %>さんの会員情報編集</h5>
  </div>
 <div class="col-sm-12 col-md-9 col-lg-8 col-xl-7 px-sm-0 px-md-1">
    <%= render 'layouts/errors', obj: @customer %>
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <form>
        
        <!--会員IDの表示-->
        <div class="form-group row ml-3 mb-3">
          <label class="col-md-3 col-form-label font-weight-bold">会員ID</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-md-4 d-flex align-items-center">
              <%= content_tag :div, @customer.id %>
            </div>
          </div>
        </div>
  
        <!--ニックネームの表示-->
        <div class="form-group row ml-3 mb-3">
          <label class="col-md-3 col-form-label font-weight-bold">ニックネーム</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-md-4 d-flex align-items-center">
              <%= content_tag :div, @customer.nickname %>
            </div>
          </div>
        </div>
  
        <!--自己紹介の表示-->
        <div class="form-group row ml-3 mb-3">
          <label class="col-md-3 col-form-label font-weight-bold">自己紹介</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-md-4 d-flex align-items-center">
              <%= content_tag :div, @customer.introduction %>
            </div>
          </div>
        </div>
  
        <!--メールアドレスの表示-->
        <div class="form-group row ml-3 mb-3">
          <label class="col-md-3 col-form-label font-weight-bold">メールアドレス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-md-4 d-flex align-items-center">
              <%= content_tag :div, @customer.email %>
            </div>
          </div>
        </div>
  
        <!--会員ステータスの選択-->
        <div class="form-group row ml-3 mb-3">
          <label class="col-md-3 col-form-label font-weight-bold">会員ステータス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-5  d-flex align-items-center">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", value: false, class: "my-0 mr-3" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "利用停止", value: true, class: "m-0" %>
            </div>
          </div>
        </div>
        
        <!--編集完了-->
        <div class="form-group row ml-3">
          <label class="col-md-3 col-form-label"></label>
          <div class="col-md-9 form-row">
            <div class="col-5">
              <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
            </div>
          </div>
        </div>
        
      </form>
    <% end %>
  </div>
</div>